{
  "name": "@moreonion/mergetags-plugin",
  "version": "0.1.0",
  "description": "Tinymce plugin for merging tags",
  "repository": "https://gitlab.more-onion.com/impact-stack/page-personalization",
  "author": "more onion <contact@more-onion.com>",
  "license": "MIT",
  "type": "module",
  "source": "src/main.js",
  "main": "dist/plugin.min.js",
  "scripts": {
    "dev:serve": "vite",
    "dev": "concurrently -n plugin,web 'yarn plugin:watch' 'yarn dev:serve'",
    "build": "vite build",
    "plugin:watch": "vite build --watch",
    "lint": "eslint src *.js",
    "fix": "eslint --fix src *.js",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "test:xml": "vitest run --reporter=junit --outputFile=./test-results.xml --coverage",
    "prepare": "husky"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^9.2.1",
    "corepack": "^0.34.0",
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^16.6.0",
    "eslint-plugin-promise": "^6.6.0",
    "eslint-plugin-vitest": "0.4.1",
    "happy-dom": "^20.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "vite": "^7.1.10",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ]
  },
  "packageManager": "yarn@4.6.0"
}
